{
    "name": "server",
    "version": "0.0.0",
    "scripts": {
        "build": "node build.js",
        "build:manual": "tsc --build tsconfig.prod.json",
        "build:dist": "npm run build && npm run dist",
        "dist": "sh ./scripts/dist.sh",
        "deploy": "npm test && npm run build:dist && eb deploy",
        "lint:types": "tsc -p tsconfig.prod.json --noEmit",
        "start": "./node_modules/pm2/bin/pm2-runtime start ecosystem.config.js --env production",
        "dev": "nodemon",
        "test": "nyc --reporter=html ts-node -r tsconfig-paths/register ./spec",
        "test:dev": "nodemon --config ./spec/nodemon.json",
        "precommit": "npm run lint:types && lint-staged"
    },
    "engines": {
        "node": "12.18.3"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts, html",
        "ignore": [
            "src/public"
        ],
        "exec": "ts-node -r tsconfig-paths/register ./src"
    },
    "_moduleAliases": {
        "@daos": "./build/server/src/daos",
        "@connection": "./build/server/src/connection",
        "@entities": "./build/server/src/entities",
        "@routes": "./build/server/src/routes",
        "@shared": "./build/server/src/shared",
        "@shared-types": "./build/types/lib",
        "@shared-backgammon": "./build/backgammon",
        "@server": "./build/server/src/Server"
    },
    "lint-staged": {
        "*.+(ts)": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "aws-sdk": "2.746.0",
        "bcrypt": "5.0.0",
        "command-line-args": "5.1.1",
        "cookie-parser": "1.4.5",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "express-async-errors": "3.1.1",
        "fs-extra": "9.0.1",
        "graphql": "14.6.0",
        "graphql-tag": "2.11.0",
        "helmet": "4.0.0",
        "http-status-codes": "1.4.0",
        "jsonwebtoken": "8.5.1",
        "module-alias": "2.2.2",
        "morgan": "1.10.0",
        "node-fetch": "2.6.0",
        "pm2": "4.4.0",
        "randomstring": "1.1.5",
        "socket.io": "2.3.0",
        "tslib": "^1.8.1",
        "typescript": "3.9.7",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "1.0.1",
        "@types/bcrypt": "3.0.0",
        "@types/command-line-args": "5.0.0",
        "@types/cookie-parser": "1.4.2",
        "@types/express": "4.17.7",
        "@types/find": "0.2.1",
        "@types/graphql": "^14.5.0",
        "@types/helmet": "0.0.47",
        "@types/jasmine": "3.5.12",
        "@types/jsonfile": "6.0.0",
        "@types/jsonwebtoken": "8.5.0",
        "@types/morgan": "1.9.1",
        "@types/node": "14.0.27",
        "@types/node-fetch": "2.5.7",
        "@types/randomstring": "1.1.6",
        "@types/socket.io": "2.1.10",
        "@types/supertest": "2.0.10",
        "@typescript-eslint/eslint-plugin": "3.6.0",
        "@typescript-eslint/parser": "3.6.0",
        "eslint": "^6.6.0",
        "eslint-config-airbnb-base": "14.2.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-prettier": "3.1.4",
        "find": "0.3.0",
        "husky": "4.2.5",
        "jasmine": "3.6.1",
        "jsonfile": "6.0.1",
        "lint-staged": "10.2.11",
        "nodemon": "2.0.4",
        "nyc": "15.1.0",
        "prettier": "2.0.5",
        "supertest": "4.0.2",
        "ts-node": "8.10.2",
        "tsconfig-paths": "3.9.0"
    }
}
